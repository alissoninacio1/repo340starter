<div class="add-new-vehicle-forr">
    <h1>Add New Vehicle</h1>

    <% if (errors.length > 0) { %>
    <div class="error-message">
        <% errors.forEach(function(error) { %>
        <p><%= error %></p>
        <% }); %>
    </div>
    <% } %>

    <form action="/inv/add-inventory" method="POST">
        <label for="invMake">Make:</label>
        <input type="text" id="invMake" name="invMake" placeholder="Enter make" required>

        <label for="invModel">Model:</label>
        <input type="text" id="invModel" name="invModel" placeholder="Enter model" required>

        <label for="classification">Classification:</label>
        <select id="classification" name="classification" required>
            <% classificationList.forEach(function(classification) { %>
                <option value="<%= classification.id %>"><%= classification.name %></option>
            <% }); %>
        </select>

        <label for="invDescription">Description:</label>
        <textarea id="invDescription" name="invDescription" placeholder="Enter description" required></textarea>

        <label for="invImage">Image Path:</label>
        <input type="text" id="invImage" name="invImage" placeholder="Enter image path" required>

        <label for="invThumbnail">Thumbnail Path:</label>
        <input type="text" id="invThumbnail" name="invThumbnail" placeholder="Enter thumbnail path" required>

        <label for="invPrice">Price:</label>
        <input type="number" id="invPrice" name="invPrice" placeholder="Enter price" min="0" step="0.01" required>

        <label for="invYear">Year:</label>
        <input type="number" id="invYear" name="invYear" placeholder="Enter year" min="1900" max="2100" required>

        <label for="invMiles">Miles:</label>
        <input type="number" id="invMiles" name="invMiles" placeholder="Enter miles" min="0" required>

        <label for="invColors">Colors:</label>
        <input type="text" id="invColors" name="invColors" placeholder="Enter colors" required pattern="[a-zA-Z\s]+" title="Only letters and spaces are allowed">

        <button class="management-buttons" type="submit">Add Vehicle</button>
    </form>


</div>