<div class="container-management">
  <h1>Vehicle Management</h1>

  <% if (messages.length > 0) { %>
  <div class="flash-message">
      <% messages.forEach(function(message) { %>
      <p><%= message %></p>
      <% }); %>
  </div>
  <% } %>

  <a href="/inv/add-classification">Add New Classification</a>
  <a href="/inv/add-inventory">Add New Inventory Item</a>

  <div class="delete-section"> <!-- New container for deletion section -->
    <h2>Delete Inventory Item</h2>
    <ul>
        <% inventoryItems.forEach(function(item) { %>
        <li>
            <%= item.inv_make %> <%= item.inv_model %>
            <form id="deleteForm_<%= item.inv_id %>" action="/inv/inventory/delete/<%= item.inv_id %>" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="button" onclick="confirmDelete('<%= item.inv_id %>')">Delete</button>
            </form>
        </li>
        <% }); %>
    </ul>
  </div>
</div>

<script>
function confirmDelete(invId) {
  if (confirm("Are you sure you want to delete this item?")) {
    document.getElementById("deleteForm_" + invId).submit();
  }
}
</script>

