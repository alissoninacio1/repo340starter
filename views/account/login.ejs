<div id="login-body">
    <div class="container">
        <h1 class="form-title">Login</h1>
        
        <!-- Display flash message if available -->
        <div class="flash-message">
            <% if (typeof flash !== 'undefined' && flash.length > 0) { %>
                <p><%= flash %></p>
            <% } %>
        </div>

        <!-- Login form -->
        <form class="login-form" action="/account/login" method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <button type="button" id="show-password-button">Show Password</button>
            </div>
            <div class="form-group">
                <button type="submit" class="login-button">Login</button>
            </div>
        </form>

        <!-- New Account signup option -->
        <div id="signup-link">
            <p>Don't have an account? <a href="/account/signup">Sign up</a></p>
        </div>
    </div>
</div>

<script src="./btnPassword.js"></script>